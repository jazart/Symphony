<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionBarPopupTheme">@style/Widget.AppCompat.ActionBar</item>
        <item name="colorControlActivated">@color/colorControlActivated</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="toolbarNavigationButtonStyle">@style/Widget.MaterialComponents.NavigationView</item>
        <item name="android:navigationBarColor">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/colorPrimary</item>
        <item name="buttonStyle">@style/CardButtonTheme</item>
        <item name="toolbarStyle">@style/ToolbarStyle</item>
    </style>

    <style name="SeekTheme" parent="Widget.AppCompat.SeekBar">
        <item name="android:colorAccent">@color/colorAccent</item>
    </style>

    <style name="CardViewTheme" parent="Widget.MaterialComponents.CardView">
        <item name="android:buttonStyle">@style/CardButtonTheme</item>
    </style>

    <style name="CardButtonTheme" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="elevation">2dp</item>
        <item name="rippleColor">@color/colorAccent</item>
        <item name="iconPadding">0dp</item>
    </style>

    <style name="ToolbarStyle" parent="ThemeOverlay.MaterialComponents.Toolbar.Primary">
        <item name="android:actionBarItemBackground">@color/colorPrimaryDark</item>
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:backgroundTint">@color/colorPrimaryDark</item>
    </style>
</resources>
